<Window x:Class="BibliotekaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotekaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="Sve Knjige">
                <Grid Background="White">
                    <DataGrid x:Name="dgKnjige"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sifra" Binding="{Binding Sifra}"/>
                            <DataGridTextColumn Header="Naslov" Binding="{Binding Naslov}"/>
                            <DataGridTextColumn Header="Autor" Binding="{Binding Autor}"/>
                            <DataGridTextColumn Header="Godina" Binding="{Binding Godina}"/>
                            <DataGridTextColumn Header="Zanr" Binding="{Binding Zanr}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Dodavanje Knjige">
                <Grid Background="White" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="20" >Unesite podatke za novu knjigu:</Label>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14">Sifra:</TextBlock>
                    <TextBox x:Name="txbSifra"
                             Grid.Row="1"
                             Grid.Column="1" Width="200"
                             Height="25"
                             HorizontalAlignment="Left"></TextBox>

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14">Naslov:</TextBlock>
                    <TextBox x:Name="txbNaslov"
                             Grid.Row="2"
                             Grid.Column="1"
                             Width="200"
                             Height="25"
                             HorizontalAlignment="Left"></TextBox>

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14">Autor:</TextBlock>
                    <TextBox x:Name="txbAutor"
                             Grid.Row="3"
                             Grid.Column="1"
                             Width="200"
                             Height="25"
                             HorizontalAlignment="Left"></TextBox>

                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14">Godina:</TextBlock>
                    <TextBox x:Name="txbGodina"
                             Grid.Row="4"
                             Grid.Column="1"
                             Width="200"
                             Height="25"
                             HorizontalAlignment="Left"></TextBox>

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14">Zanr:</TextBlock>
                    <TextBox x:Name="txbZanr"
                             Grid.Row="5"
                             Grid.Column="1"
                             Width="200"
                             Height="25"
                             HorizontalAlignment="Left"></TextBox>

                    <Button x:Name="btnDodaj"
                            Click="btnDodaj_Click"
                            Grid.Row="5"
                            Grid.Column="1"
                            Height="30"
                            Width="125"
                            HorizontalAlignment="Right" Margin="0,0,50,0">Dodaj</Button>
                </Grid>
            </TabItem>
            <TabItem Header="Izmena Knjige">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.35*"/>
                        <ColumnDefinition Width="0.65*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Label x:Name="lbIzmena"
                           Grid.Row="0"
                           Grid.Column="0"
                           FontSize="20"
                           FontWeight="Bold"
                           >Knjiga za izmenu:</Label>

                    <ComboBox x:Name="cbKnjige"
                              Grid.Row="1"
                              Grid.Column="0"
                              Height="25"
                              Grid.RowSpan="2"
                              SelectionChanged="cbKnjige_SelectionChanged"></ComboBox>

                    <TextBlock FontSize="14"
                               Grid.Row="0"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0">Naslov:</TextBlock>
                    <TextBox x:Name="txbRemoveNaslov"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="250"
                             Height="25"
                             HorizontalAlignment="Right"
                             Margin="0,0,20,0"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="1"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0">Autor:</TextBlock>
                    <TextBox x:Name="txbRemoveAutor"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="250"
                             Height="25"
                             HorizontalAlignment="Right"
                             Margin="0,0,20,0"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="2"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0">Godina:</TextBlock>
                    <TextBox x:Name="txbRemoveGodina"
                             Grid.Row="2"
                             Grid.Column="1"
                             Width="250"
                             Height="25"
                             HorizontalAlignment="Right"
                             Margin="0,0,20,0"></TextBox>
                    
                    <TextBlock FontSize="14"
                               Grid.Row="3"
                               Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0">Zanr:</TextBlock>
                    <TextBox x:Name="txbRemoveZanr"
                             Grid.Row="3"
                             Grid.Column="1"
                             Width="250"
                             Height="25"
                             HorizontalAlignment="Right"
                             Margin="0,0,20,0"></TextBox>

                    <Button x:Name="btnIzmeni"
                            Grid.Row="4"
                            Grid.Column="1"
                            Height="25"
                            Width="120"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0"
                            Click="btnIzmeni_Click">Izmeni</Button>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
