<Window x:Class="VideotekaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideotekaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <TabControl>
            <TabItem Header="Svi filmovi">
                <Grid Background="White">
                    <DataGrid x:Name="dgFilmovi"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sifra" Binding="{Binding Sifra}"/>
                            <DataGridTextColumn Header="Naslov" Binding="{Binding Naslov}"/>
                            <DataGridTextColumn Header="Reziser" Binding="{Binding Reziser}"/>
                            <DataGridTextColumn Header="Godina" Binding="{Binding Godina}"/>
                            <DataGridTextColumn Header="Zanr" Binding="{Binding Zanr}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Dodaj film">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.4*"/>
                    </Grid.ColumnDefinitions>

                    <Label FontWeight="Bold"
                           FontSize="18"
                           Grid.Row="0"
                           Grid.Column="0"
                           Grid.ColumnSpan="2">Unesite podatke za novi film:</Label>

                    <TextBlock FontSize="14"
                               Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0">Sifra:</TextBlock>
                    <TextBox x:Name="txbSifra"
                             Grid.Row="1"
                             Grid.Column="0"
                             Width="200"
                             Height="20"
                             HorizontalAlignment="Center"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="2"
                               Grid.Column="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0">Naslov:</TextBlock>
                    <TextBox x:Name="txbNaslov"
                            Grid.Row="2"
                            Grid.Column="0"
                            Width="200"
                            Height="20"
                            HorizontalAlignment="Center"></TextBox>


                    <TextBlock FontSize="14"
                               Grid.Row="3"
                               Grid.Column="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0">Reziser:</TextBlock>
                    <TextBox x:Name="txbReziser"
                            Grid.Row="3"
                            Grid.Column="0"
                            Width="200"
                            Height="20"
                            HorizontalAlignment="Center"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="4"
                               Grid.Column="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0">Godina:</TextBlock>
                    <TextBox x:Name="txbGodina"
                            Grid.Row="4"
                            Grid.Column="0"
                            Width="200"
                            Height="20"
                            HorizontalAlignment="Center"></TextBox>
                    <TextBlock FontSize="14"
                               Grid.Row="5"
                               Grid.Column="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0">Zanr:</TextBlock>
                    <TextBox x:Name="txbZanr"
                            Grid.Row="5"
                            Grid.Column="0"
                            Width="200"
                            Height="20"
                            HorizontalAlignment="Center"></TextBox>

                    <Button x:Name="btnDodaj"
                            Grid.Row="5"
                            Grid.Column="1"
                            Height="25"
                            Width="100"
                            Click="btnDodaj_Click">Dodaj</Button>
                </Grid>
            </TabItem>
            <TabItem Header="Izmena filma">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.4*"/>
                        <ColumnDefinition Width="0.6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Label FontWeight="Bold"
                           Grid.Row="0"
                           Grid.Column="0"
                           FontSize="18"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0">Film za izmenu:</Label>

                    <ComboBox x:Name="cmbFilmovi"
                              Grid.Row="1"
                              Grid.RowSpan="2"
                              Height="25"
                              Width="200"></ComboBox>

                    <TextBlock FontSize="14"
                               Grid.Row="0"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">Naslov:</TextBlock>
                    <TextBox x:Name="txbNaslovIzmena"
                             Grid.Row="0"
                             Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Right"
                             Height="20"
                             Margin="0,0,20,0"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">Reziser:</TextBlock>
                    <TextBox x:Name="txbReziserIzmena"
                             Grid.Row="1"
                             Grid.Column="1"
                             Width="250"
                             Height="20"
                             HorizontalAlignment="Right"
                             Margin="0,0,20,0"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="2"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">Godina:</TextBlock>
                    <TextBox x:Name="txbGodinaIzmena"
                             Grid.Row="2"
                             Grid.Column="1"
                             HorizontalAlignment="Right"
                             Width="250"
                             Height="20"
                             Margin="0,0,20,0"></TextBox>

                    <TextBlock FontSize="14"
                               Grid.Row="3"
                               Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">Zanr:</TextBlock>
                    <TextBox x:Name="txbZanrIzmena"
                             Grid.Row="3"
                             Grid.Column="1"
                             Width="250"
                             Height="20"
                             HorizontalAlignment="Right"
                             Margin="0,0,20,0"></TextBox>

                    <Button x:Name="btnIzmeni"
                            Grid.Row="4"
                            Grid.Column="1"
                            Height="25"
                            Width="125"
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0" Click="btnIzmeni_Click">Izmeni</Button>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
